<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.server_score">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_server_score_round"
        android:label="Server Score"
        android:roundIcon="@mipmap/ic_server_score_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".score.ScoreActivity"></activity>
        <activity android:name=".predictions.PredictionsActivity" />
        <activity android:name=".add.AddActivity" />
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>